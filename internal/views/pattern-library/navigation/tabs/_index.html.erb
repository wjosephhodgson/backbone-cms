          </div>
          <!-- end text -->
        </div>
        <!-- end TAB 2 -->

        <!-- TAB 3 SIZES main container-->
        <div class="tab-pane fade m-pdp-tabs-sizes" id="sizes">
            <!-- first size -->
                <!-- size 1 -->
                <div id="standard_size" class="m-sizes-container">
                  <!-- vertical ruler container -->
                  <div class="m-sizes-vertical-container">
                    <div class="m-sizes-vertical-arrow">
                      <div class="sizes-up"></div>
                    </div>
                    <div class="m-sizes-vertical-number">
                      <label id="standard_height">16" H</label>
                    </div>
                    <div class="m-sizes-vertical-arrow">
                      <div class="sizes-down"></div>
                    </div>
                  </div>
                  <!-- end vertical ruler container -->

                  <!-- image + horizontal ruler-->
                  <div class="m-sizes-image-horizontal-container">
                    <img id="standard_image" src="http://placehold.it/200x220" alt="bouquet size image"/>
                    <!-- horizontal ruler container -->
                    <div class="m-sizes-horizontal-container">
                      <div class="m-sizes-horizontal-arrow-l">
                        <div class="sizes-left"></div>
                      </div>
                      <div class="m-sizes-horizontal-number">
                        <label id="standard_width">13" W</label>
                      </div>
                      <div class="m-sizes-horizontal-arrow-r">
                        <div class="sizes-right"></div>
                      </div>
                      <div class="clear"></div>

                      <!-- size descrption label and price -->
                      <div class="m-sizes-label-container">
                      </div>
                      <!-- end size descrption label and price -->
                    </div>
                    <!-- end horizontal ruler container -->
                  </div>
                  <!-- end image + horizontal ruler-->
                </div>
                <!-- end size 1 -->
              <!-- end first size -->
          </div>

        </div>
        <!-- end TABS content -->
      </div>
      <!-- end TABS container with bootstrap main tabbable class-->
  </div>
