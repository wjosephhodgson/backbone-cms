        </div>
        <!-- end TAB 1 -->

        <!-- TAB 2 Vases container-->
        <div class="tab-pane fade" id="vase">
          <!-- image container -->
          <div class="m-pdp-tabs-vase-img">
            <!-- image -->
            <img src="http://placehold.it/200x220" alt="vase image"/>
          </div>
          <!-- end image  -->

          <!-- text container-->
          <div  class="m-pdp-tabs-vase-text">
